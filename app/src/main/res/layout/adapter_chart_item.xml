<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/adapter_chart_tvtitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="@dimen/four_text_size"
        android:textColor="@color/black"
        android:text="这个是第一种图表"
        android:gravity="center"/>
    <TextView
        android:id="@+id/adapter_chart_tvdesc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="@dimen/two_text_size"
        android:textColor="@color/small_gray"
        android:text="这里是图表的功能描述"
        android:gravity="center_horizontal"/>

</LinearLayout>